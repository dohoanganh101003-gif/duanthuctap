<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Quản lý đặt sân</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/trangchu.css" />
    <link rel="stylesheet" href="/datSan.css" />
    <link rel="stylesheet" href="/bang.css" />

</head>

<body>
    <header class="main-header shadow-sm">
        <nav class="navbar navbar-dark bg-primary py-3 d-flex align-items-center justify-content-between">
            <button class="btn btn-outline-light btn-sm" id="sidebarToggle">
                ☰
            </button>

            <a class="navbar-brand fw-bold text-white ml-2" href="/">Quản Lý Sân Bóng</a>

            <ul class="navbar-nav ml-auto flex-row">
                <% if (session && session.user_id) { %>
                    <li class="nav-item ml-3"><a class="nav-link text-white" href="/dangxuat">Đăng xuất</a></li>
                    <% } else { %>
                        <li class="nav-item ml-3"><a class="nav-link text-white" href="/dangnhap">Đăng nhập</a></li>
                        <li class="nav-item ml-3"><a class="nav-link text-white" href="/dangky">Đăng ký</a></li>
                        <% } %>
            </ul>
        </nav>
    </header>

    <div id="sidebar" class="sidebar">
        <button class="close-btn" id="closeSidebar">×</button>
        <ul class="sidebar-menu list-unstyled mt-4">
            <li><a href="/">Trang chủ</a></li>
            <li><a href="/lichsu_datsan">Lịch sử đặt sân</a></li>

            <% if (session && session.role==='admin' ) { %>
                <li><a href="/danhsach_sanbong">Quản lý sân bóng</a></li>
                <li><a href="/danhsach-dichvu">Quản lý dịch vụ</a></li>
                <li><a href="/quanly_datsan" class="active">Quản lý đặt sân</a></li>
                <li><a href="/admin/users"> Quản lý người dùng</a></li>
                <li><a href="/thongke">Thống kê</a></li>
                <% } %>
        </ul>
    </div>

    <main class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2>Danh sách đặt sân</h2>
        </div>

        <% if (bookings && bookings.length> 0) { %>
            <div class="table-container">
                <table class="table table-striped table-bordered text-center align-middle table-bookings">
                    <thead class="thead-dark">
                        <tr>
                            <th>Người đặt</th>
                            <th>Sân</th>
                            <th>Sân con</th>
                            <th>Thời gian</th>
                            <th>Trạng thái</th>
                            <th>Tổng tiền</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% bookings.forEach(b=> { %>
                            <tr>
                                <td>
                                    <%= b.username %>
                                </td>
                                <td>
                                    <%= b.field_name %>
                                </td>
                                <td>
                                    <%= b.sub_field_name %>
                                </td>
                                <td>
                                    <%= new Date(b.start_time).toLocaleString('vi-VN') %> -
                                        <%= new Date(b.end_time).toLocaleString('vi-VN') %>
                                </td>
                                <td class="status-<%= b.status %>">
                                    <%= b.status %>
                                </td>
                                <td>
                                    <%= Math.ceil(Number(b.total_price)).toLocaleString('vi-VN') %> VNĐ
                                </td>

                                <td>
                                    <div class="action-buttons">
                                        <button class="btn btn-sm btn-info btn-view" data-user="<%= b.username %>"
                                            data-phone="<%= b.user_phone || 'Chưa có' %>"
                                            data-start="<%= b.start_time %>" data-end="<%= b.end_time %>"
                                            data-status="<%= b.status %>" data-price="<%= b.total_price %>">
                                            Xem
                                        </button>

                                        <% if (b.status==='pending' ) { %>
                                            <button class="btn btn-sm btn-success btn-accept" data-id="<%= b.id %>">Xác
                                                nhận</button>
                                            <button class="btn btn-sm btn-danger btn-cancel"
                                                data-id="<%= b.id %>">Hủy</button>
                                            <% } %>
                                    </div>
                                </td>

                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
            <% } else { %>
                <div class="alert alert-info">Hiện chưa có đặt sân nào.</div>
                <% } %>
    </main>

    <div class="modal fade" id="viewModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Chi tiết đặt sân</h5>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body" id="modalBody"></div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <script src="/scripts/sidebar.js" defer></script>
    <script src="/scripts/quanly-datsan.js" defer></script>
    </script>
</body>

</html>