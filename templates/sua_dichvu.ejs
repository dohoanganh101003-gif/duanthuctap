<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thêm Dịch Vụ - Quản Lý Sân Bóng</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/trangchu.css">
</head>

<body>
    <header class="main-header shadow-sm">
        <nav class="navbar navbar-expand-lg navbar-dark py-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-white" href="/">Quản Lý Sân Bóng</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item"><a class="nav-link text-white" href="/">Trang chủ</a></li>
                        <li class="nav-item"><a class="nav-link text-white" href="/lichsu_datsan">Lịch sử đặt
                                sân</a></li>
                        <% if (session.role==='admin' ) { %>
                            <li class="nav-item"><a class="nav-link text-white" href="/danhsach-dichvu">Dịch vụ</a>
                            </li>
                            <li class="nav-item"><a class="nav-link text-white" href="/them_sanbong">Thêm sân</a>
                            </li>
                            <li class="nav-item"><a class="nav-link text-white" href="/them_dichvu">Thêm dịch vụ</a>
                            </li>
                            <li class="nav-item"><a class="nav-link text-white" href="/quanly_datsan">Quản lý đặt
                                    sân</a></li>
                            <% } %>
                    </ul>

                    <ul class="navbar-nav ml-auto">
                        <% if (session.user_id) { %>
                            <li class="nav-item"><a class="nav-link text-white" href="/dangxuat">Đăng xuất</a></li>
                            <% } else { %>
                                <li class="nav-item"><a class="nav-link text-white" href="/dangnhap">Đăng nhập</a>
                                </li>
                                <li class="nav-item"><a class="nav-link text-white" href="/dangky">Đăng ký</a></li>
                                <% } %>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container mt-4">
        <h2>Sửa thông tin dịch vụ</h2>
        <form method="POST" action="/api/dichvu/<%= service.id %>?_method=PUT">
            <div class="form-group">
                <label for="name">Tên dịch vụ</label>
                <input type="text" class="form-control" id="name" name="name" value="<%= service.name %>" required>
            </div>
            <div class="form-group">
                <label for="description">Mô tả</label>
                <textarea class="form-control" id="description" name="description"
                    rows="3"><%= service.description || '' %></textarea>
            </div>
            <div class="form-group">
                <label for="price">Giá (VNĐ)</label>
                <input type="number" step="1000" class="form-control" id="price" name="price"
                    value="<%= service.price %>" min="0" required>
            </div>
            <div class="form-group">
                <label for="field_id">Sân bóng</label>
                <select class="form-control" id="field_id" name="field_id" required>
                    <option value="">Chọn sân bóng</option>
                    <% fields.forEach(field=> { %>
                        <option value="<%= field.id %>" <%=field.id===service.field_id ? 'selected' : '' %>>
                            <%= field.name %>
                        </option>
                        <% }) %>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
            <a href="/danhsach-dichvu" class="btn btn-secondary">Hủy</a>
        </form>
    </main>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script src="https://unpkg.com/leaflet-routing-machine@latest/dist/leaflet-routing-machine.js"></script>
    <script src="https://unpkg.com/leaflet-control-geocoder/dist/Control.Geocoder.js"></script>
    <script src="https://unpkg.com/leaflet-draw@1.0.4/dist/leaflet.draw.js"></script>
    <script src="/scripts/dichvu.js"></script>

</body>

</html>