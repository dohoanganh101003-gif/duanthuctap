<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thêm Dịch Vụ - Quản Lý Sân Bóng</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/them-dichvu.css">
</head>

<body>
    <header class="main-header bg-primary text-white p-3">
        <div class="header-content">
            <h1 class="site-title">Quản Lý Sân Bóng</h1>
            <nav class="navbar navbar-expand-lg navbar-light bg-light mt-3">
                <div class="container-fluid">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <a class="nav-link active" href="/">Trang chủ</a>
                        <a class="nav-item nav-link active" href="/lichsu_datsan">Lịch sử đặt sân</a>


                        <% if (session.role==='admin' ) { %>
                            <a class="nav-item nav-link active" href="/danhsach-dichvu">Danh sách dịch vụ</a>
                            <a class="nav-item nav-link active" href="/them_sanbong">Thêm sân bóng</a>
                            <a class="nav-item nav-link active" href="/them_dichvu">Thêm dịch vụ</a>
                            <a class="nav-item nav-link active" href="/quanly_datsan">Quản lý đặt sân</a>
                            <% } %>
                    </ul>
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <% if (session.user_id) { %>
                            <li class="nav-item"><a class="nav-link" href="/dangxuat">Đăng xuất</a></li>
                            <% } else { %>
                                <li class="nav-item"><a class="nav-link" href="/dangnhap">Đăng nhập</a></li>
                                <li class="nav-item"><a class="nav-link" href="/dangky">Đăng ký</a></li>
                                <% } %>
                    </ul>
                </div>
            </nav>
        </div>
    </header>

    <main class="container mt-4">
        <h2>Sửa thông tin dịch vụ</h2>
        <form method="POST" action="/api/dichvu/<%= service.id %>?_method=PUT">
            <div class="form-group">
                <label for="name">Tên dịch vụ</label>
                <input type="text" class="form-control" id="name" name="name" value="<%= service.name %>" required>
            </div>
            <div class="form-group">
                <label for="description">Mô tả</label>
                <textarea class="form-control" id="description" name="description"
                    rows="3"><%= service.description || '' %></textarea>
            </div>
            <div class="form-group">
                <label for="price">Giá (VNĐ)</label>
                <input type="number" step="1000" class="form-control" id="price" name="price"
                    value="<%= service.price %>" min="0" required>
            </div>
            <div class="form-group">
                <label for="field_id">Sân bóng</label>
                <select class="form-control" id="field_id" name="field_id" required>
                    <option value="">Chọn sân bóng</option>
                    <% fields.forEach(field=> { %>
                        <option value="<%= field.id %>" <%=field.id===service.field_id ? 'selected' : '' %>>
                            <%= field.name %>
                        </option>
                        <% }) %>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
            <a href="/danhsach-dichvu" class="btn btn-secondary">Hủy</a>
        </form>
    </main>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script src="https://unpkg.com/leaflet-routing-machine@latest/dist/leaflet-routing-machine.js"></script>
    <script src="https://unpkg.com/leaflet-control-geocoder/dist/Control.Geocoder.js"></script>
    <script src="https://unpkg.com/leaflet-draw@1.0.4/dist/leaflet.draw.js"></script>
    <script src="/scripts/dichvu.js"></script>

</body>

</html>