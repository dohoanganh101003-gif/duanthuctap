<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thêm Dịch Vụ</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/trangchu.css">
</head>

<body>
    <header class="main-header shadow-sm">
        <nav class="navbar navbar-dark bg-primary py-3 d-flex align-items-center justify-content-between">
            <button class="btn btn-outline-light btn-sm" id="sidebarToggle">
                ☰
            </button>

            <a class="navbar-brand fw-bold text-white ml-2" href="/">Quản Lý Sân Bóng</a>

            <ul class="navbar-nav ml-auto flex-row">
                <% if (session && session.user_id) { %>
                    <li class="nav-item ml-3">
                        <a class="nav-link text-white" href="/dangxuat">Đăng xuất</a>
                    </li>
                    <% } else { %>
                        <li class="nav-item ml-3">
                            <a class="nav-link text-white" href="/dangnhap">Đăng nhập</a>
                        </li>
                        <li class="nav-item ml-3">
                            <a class="nav-link text-white" href="/dangky">Đăng ký</a>
                        </li>
                        <% } %>
            </ul>
        </nav>
    </header>

    <div id="sidebar" class="sidebar">
        <button class="close-btn" id="closeSidebar">×</button>
        <ul class="sidebar-menu list-unstyled mt-4">

            <li><a href="/">Trang chủ</a></li>
            <li><a href="/lichsu_datsan">Lịch sử đặt sân</a></li>

            <% if (session && session.role==='admin' ) { %>
                <li><a href="/danhsach_sanbong">Quản lý sân bóng</a></li>
                <li><a href="/danhsach-dichvu" class="active">Quản lý dịch vụ</a></li>
                <li><a href="/quanly_datsan">Quản lý đặt sân</a></li>
                <li><a href="/admin/users"> Quản lý người dùng</a></li>
                <li><a href="/thongke"> Thống kê</a></li>

                <% } %>

        </ul>
    </div>

    <main class="container mt-4">
        <h2>Thêm dịch vụ mới</h2>
        <form id="addServiceForm">
            <div class="form-group">
                <label for="name">Tên dịch vụ</label>
                <input type="text" class="form-control" id="name" name="name" required>
            </div>
            <div class="form-group">
                <label for="description">Mô tả</label>
                <textarea class="form-control" id="description" name="description" rows="3"></textarea>
            </div>
            <div class="form-group">
                <label for="price">Giá (VNĐ)</label>
                <input type="number" step="1000" class="form-control" id="price" name="price" min="0" required>
            </div>
            <div class="form-group">
                <label for="field_id">Sân bóng</label>
                <select class="form-control" id="field_id" name="field_id" required>
                    <option value="">Chọn sân bóng</option>
                    <% fields.forEach(field=> { %>
                        <option value="<%= field.id %>">
                            <%= field.name %>
                        </option>
                        <% }) %>
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Thêm dịch vụ</button>
            <a href="/danhsach-dichvu" class="btn btn-secondary">Hủy</a>
        </form>
    </main>


    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script src="https://unpkg.com/leaflet-routing-machine@latest/dist/leaflet-routing-machine.js"></script>
    <script src="https://unpkg.com/leaflet-control-geocoder/dist/Control.Geocoder.js"></script>
    <script src="https://unpkg.com/leaflet-draw@1.0.4/dist/leaflet.draw.js"></script>
    <script src="/scripts/dichvu.js"></script>
    <script src="/scripts/sidebar.js" defer></script>


</body>

</html>