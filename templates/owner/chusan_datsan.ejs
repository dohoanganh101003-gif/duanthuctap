<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Quản lý đặt sân - Chủ sân</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/trangchu.css" />
    <link rel="stylesheet" href="/datSan.css" />
    <link rel="stylesheet" href="/bang.css" />
</head>

<body>
    <header class="main-header shadow-sm">
        <nav class="navbar navbar-dark bg-primary py-3 d-flex align-items-center justify-content-between">
            <button class="btn btn-outline-light btn-sm" id="sidebarToggle">☰</button>
            <a class="navbar-brand fw-bold text-white ml-2" href="/">Quản Lý Sân Bóng</a>

            <ul class="navbar-nav ml-auto flex-row">
                <% if (session && session.user_id) { %>
                    <li class="nav-item ml-3"><a class="nav-link text-white" href="/dangxuat">Đăng xuất</a></li>
                    <% } else { %>
                        <li class="nav-item ml-3"><a class="nav-link text-white" href="/dangnhap">Đăng nhập</a></li>
                        <li class="nav-item ml-3"><a class="nav-link text-white" href="/dangky">Đăng ký</a></li>
                        <% } %>
            </ul>
        </nav>
    </header>

    <div id="sidebar" class="sidebar">
        <button class="close-btn" id="closeSidebar">×</button>
        <ul class="sidebar-menu list-unstyled mt-4">
            <li><a href="/owner/chusan_datsan" class="active">Quản lý đặt sân</a></li>
            <li><a href="/owner/chusan_sanbong">Quản lý sân bóng</a></li>
            <li><a href="/owner/chusan_dichvu">Dịch vụ của tôi</a></li>
            <li><a href="/thongke">Thống kê</a></li>
        </ul>
    </div>

    <main class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2>Danh sách đặt sân</h2>
        </div>

        <% if (bookings && bookings.length> 0) { %>
            <div class="table-container">
                <table class="table table-striped table-bordered text-center align-middle table-owner-bookings">
                    <thead class="thead-dark">
                        <tr>
                            <th>Người đặt</th>
                            <th>Sân</th>
                            <th>Sân con</th>
                            <th>Thời gian</th>
                            <th>Tổng tiền</th>
                            <th>Trạng thái</th>
                            <th>Thanh toán</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% bookings.forEach(b=> { %>
                            <tr>
                                <td>
                                    <%= b.user_name %>
                                </td>
                                <td>
                                    <%= b.field_name %>
                                </td>
                                <td>
                                    <%= b.sub_field_name %>
                                </td>
                                <td>
                                    <%= new Date(b.start_time).toLocaleString('vi-VN') %> - <%= new
                                            Date(b.end_time).toLocaleString('vi-VN') %>
                                </td>

                                <td>
                                    <%= Math.ceil(b.total_price).toLocaleString('vi-VN') %> VNĐ
                                </td>
                                <td class="status-<%= b.status %>">
                                    <%= b.status %>
                                </td>

                                <td>
                                    <div class="payment-actions">
                                        <% if (b.isExpired) { %>
                                            <span class="badge badge-secondary">Đã hết hạn</span>
                                            <% } else if (b.status==='pending' ) { %>
                                                <form action="/owner/api/xacnhan-datsan/<%= b.id %>" method="POST"
                                                    style="display:inline;">
                                                    <button type="submit" class="booking-btn booking-btn-accept">Xác
                                                        nhận</button>
                                                </form>
                                                <form action="/owner/api/huy-datsan/<%= b.id %>" method="POST"
                                                    style="display:inline;">
                                                    <button type="submit"
                                                        class="booking-btn booking-btn-cancel">Hủy</button>
                                                </form>

                                                <% } else if (b.payment_status==='waiting_transfer' ) { %>
                                                    <button class="booking-btn booking-btn-info payment-btn"
                                                        data-toggle="modal" data-target="#proofModal"
                                                        data-id="<%= b.id %>" data-proof="<%= b.payment_proof || '' %>">
                                                        Xem minh chứng
                                                    </button>

                                                    <% } else if (b.payment_status==='paid' ) { %>
                                                        <span class="badge badge-success">Đã thanh toán</span>

                                                        <% } else if (b.payment_status==='waiting_cash' ) { %>
                                                            <span class="badge badge-warning">Thanh toán tại sân</span>

                                                            <% } else { %>
                                                                <span class="badge badge-secondary">Chưa thanh
                                                                    toán</span>
                                                                <% } %>
                                    </div>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
            <% } else { %>
                <div class="alert alert-info">Hiện chưa có đặt sân nào.</div>
                <% } %>
    </main>

    <div class="modal fade" id="proofModal" tabindex="-1" role="dialog" aria-labelledby="proofModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="proofModalLabel">Minh chứng thanh toán</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">&times;</button>
                </div>
                <div class="modal-body text-center" id="proofModalBody" style="min-height: 250px;">
                    <div class="proof-wrapper d-flex justify-content-center align-items-center">
                    </div>
                </div>
                <div class="modal-footer justify-content-center">
                    <form id="confirmForm" method="POST">
                        <button type="submit" class="btn btn-success">Đã nhận tiền</button>
                    </form>
                    <form id="declineForm" method="POST">
                        <button type="submit" class="btn btn-danger">Chưa nhận tiền</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <script src="/scripts/sidebar.js" defer></script>
    <script src="/scripts/owner_datsan.js" defer></script>
    <script src="/scripts/owner_sanbong.js" defer></script>
    <script src="/scripts/owner_thanhtoan.js" defer></script>


</body>

</html>