<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Quản lý Sân Con</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/trangchu.css" />
</head>

<body>
    <header class="main-header shadow-sm">
        <nav class="navbar navbar-dark bg-primary py-3 d-flex align-items-center justify-content-between">
            <button class="btn btn-outline-light btn-sm" id="sidebarToggle">
                ☰
            </button>

            <a class="navbar-brand fw-bold text-white ml-2" href="/">Quản Lý Sân Bóng</a>

            <ul class="navbar-nav ml-auto flex-row">
                <% if (session && session.user_id) { %>
                    <li class="nav-item ml-3"><a class="nav-link text-white" href="/dangxuat">Đăng xuất</a></li>
                    <% } else { %>
                        <li class="nav-item ml-3"><a class="nav-link text-white" href="/dangnhap">Đăng nhập</a></li>
                        <li class="nav-item ml-3"><a class="nav-link text-white" href="/dangky">Đăng ký</a></li>
                        <% } %>
            </ul>
        </nav>
    </header>

    <div id="sidebar" class="sidebar">
        <button class="close-btn" id="closeSidebar">×</button>
        <ul class="sidebar-menu list-unstyled mt-4">
            <li><a href="/owner/chusan_datsan">Quản lý đặt sân</a></li>
            <li><a href="/owner/chusan_sanbong">Quản lý sân bóng</a></li>
            <li><a href="/owner/chusan_dichvu">Dịch vụ của tôi</a></li>
        </ul>
    </div>

    <main class="container mt-4">
        <h2>Quản lý sân con cho: <%= field.name %>
        </h2>

        <div class="d-flex justify-content-between align-items-center mb-3">
            <a href="/owner/chusan_sanbong" class="btn btn-secondary">← Quay lại</a>
            <button id="btnAddSubField" class="btn btn-success">+ Thêm sân con</button>
        </div>

        <% if (subFields && subFields.length> 0) { %>
            <table class="table table-striped table-bordered text-center align-middle">
                <thead class="thead-dark">
                    <tr>
                        <th>Tên sân con</th>
                        <th>Kích thước</th>
                        <th>Trạng thái</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    <% subFields.forEach(sf=> { %>
                        <tr>
                            <td>
                                <%= sf.name %>
                            </td>
                            <td>
                                <%= sf.size %>
                            </td>
                            <td>
                                <%= sf.status || 'Hoạt động' %>
                            </td>
                            <td>
                                <button class="btn btn-warning btn-sm btn-edit" data-id="<%= sf.id %>"
                                    data-name="<%= sf.name %>" data-size="<%= sf.size %>">Sửa</button>
                                <button class="btn btn-danger btn-sm btn-delete-sub" data-id="<%= sf.id %>">Xóa</button>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
            <% } else { %>
                <div class="alert alert-info">Chưa có sân con nào.</div>
                <% } %>
    </main>

    <div class="modal fade" id="subFieldModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Thêm/Sửa sân con</h5>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <form id="subFieldForm">
                        <input type="hidden" id="fieldId" value="<%= field.id %>">

                        <input type="hidden" id="subFieldId">
                        <div class="form-group">
                            <label for="subName">Tên sân con</label>
                            <input type="text" class="form-control" id="subName" required>
                        </div>
                        <div class="form-group">
                            <label for="subSize">Kích thước</label>
                            <select class="form-control" id="subSize" required>
                                <option value="5x5">5x5</option>
                                <option value="7x7">7x7</option>
                                <option value="11x11">11x11</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Lưu</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <script src="/scripts/owner_sanbong.js" defer></script>
    <script src="/scripts/sidebar.js" defer></script>

</body>

</html>