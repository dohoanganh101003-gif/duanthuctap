<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản Lý Sân Bóng</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet-routing-machine@latest/dist/leaflet-routing-machine.css" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet-draw@1.0.4/dist/leaflet.draw.css">
    <link rel="stylesheet" href="/trangchu.css">

</head>

<body>
    <header class="main-header shadow-sm">
        <nav class="navbar navbar-dark bg-primary py-3 d-flex align-items-center justify-content-between">
            <button class="btn btn-outline-light btn-sm" id="sidebarToggle">
                ☰
            </button>

            <a class="navbar-brand fw-bold text-white ml-2" href="/">Quản Lý Sân Bóng</a>

            <ul class="navbar-nav ml-auto flex-row">
                <% if (session && session.user_id) { %>
                    <li class="nav-item ml-3">
                        <a class="nav-link text-white" href="/dangxuat">Đăng xuất</a>
                    </li>
                    <% } else { %>
                        <li class="nav-item ml-3">
                            <a class="nav-link text-white" href="/dangnhap">Đăng nhập</a>
                        </li>
                        <li class="nav-item ml-3">
                            <a class="nav-link text-white" href="/dangky">Đăng ký</a>
                        </li>
                        <% } %>
            </ul>
        </nav>
    </header>

    <div id="sidebar" class="sidebar">
        <button class="close-btn" id="closeSidebar">×</button>
        <ul class="sidebar-menu list-unstyled mt-4">

            <li><a href="/">Trang chủ</a></li>
            <li><a href="/lichsu_datsan">Lịch sử đặt sân</a></li>

            <% if (session && session.role==='admin' ) { %>
                <li><a href="/danhsach_sanbong">Quản lý sân bóng</a></li>
                <li><a href="/danhsach-dichvu" class="active">Quản lý dịch vụ</a></li>
                <li><a href="/quanly_datsan">Quản lý đặt sân</a></li>
                <% } %>

        </ul>
    </div>

    <main class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2>Danh sách dịch vụ</h2>

            <a href="/them_dichvu" class="btn btn-success">+ Thêm dịch vụ</a>
        </div>
        <div class="table-container">
            <table class="table table-bordered table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th>Tên dịch vụ</th>
                        <th>Mô tả</th>
                        <th>Giá (VNĐ)</th>
                        <th>Thuộc sân bóng</th>
                        <% if (session && session.role==='admin' ) { %>
                            <th>Hành động</th>
                            <% } %>
                    </tr>
                </thead>
                <tbody>
                    <% services.forEach(service=> { %>
                        <tr>
                            <td>
                                <%= service.name %>
                            </td>
                            <td>
                                <%= service.description || 'Không có mô tả' %>
                            </td>
                            <td>
                                <%= Math.round(Number(service.price)).toLocaleString("vi-VN") %>
                            </td>

                            <td>
                                <%= service.field_name %>
                            </td>
                            <% if (session && session.role==='admin' ) { %>
                                <td>
                                    <a href="/sua_dichvu/<%= service.id %>" class="btn btn-warning btn-sm">Sửa</a>
                                    <button onclick="deleteService(<%= service.id %>)"
                                        class="btn btn-danger btn-sm">Xóa</button>
                                </td>
                                <% } %>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
    </main>


    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script src="https://unpkg.com/leaflet-routing-machine@latest/dist/leaflet-routing-machine.js"></script>
    <script src="https://unpkg.com/leaflet-control-geocoder/dist/Control.Geocoder.js"></script>
    <script src="https://unpkg.com/leaflet-draw@1.0.4/dist/leaflet.draw.js"></script>
    <script>
        function deleteService(id) {
            if (confirm("Bạn có chắc muốn xóa dịch vụ này không?")) {
                fetch(`/api/dichvu/${id}`, { method: "DELETE" })
                    .then(res => {
                        if (res.ok) location.reload();
                        else alert("Xóa dịch vụ thất bại");
                    });
            }
        }
    </script>
    <script src="/scripts/dichvu.js"></script>
    <script src="/scripts/sidebar.js" defer></script>


</body>

</html>