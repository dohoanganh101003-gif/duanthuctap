<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản Lý Sân Bóng</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet-routing-machine@latest/dist/leaflet-routing-machine.css" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet-draw@1.0.4/dist/leaflet.draw.css">
    <link rel="stylesheet" href="/trangchu.css">

</head>

<body>
    <header class="main-header shadow-sm">
        <nav class="navbar navbar-expand-lg navbar-dark py-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-white" href="/">Quản Lý Sân Bóng</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav mr-auto">

                        <% if (session.role==='admin' ) { %>
                            <li class="nav-item"><a class="nav-link text-white" href="/danhsach-dichvu">Dịch vụ</a>
                            </li>
                            <li class="nav-item"><a class="nav-link text-white" href="/them_sanbong">Thêm sân</a>
                            </li>
                            <li class="nav-item"><a class="nav-link text-white" href="/them_dichvu">Thêm dịch vụ</a>
                            </li>
                            <li class="nav-item"><a class="nav-link text-white" href="/quanly_datsan">Quản lý đặt
                                    sân</a></li>
                            <% } else if (session.role==='owner' ) { %>
                                <!-- Menu riêng cho chủ sân -->
                                <li class="nav-item"><a class="nav-link text-white" href="/owner/chusan_datsan">Quản lý
                                        đặt sân</a></li>
                                <li class="nav-item"><a class="nav-link text-white" href="/owner/chusan_dichvu">Danh
                                        sách
                                        dịch vụ</a></li>
                                <li class="nav-item"><a class="nav-link text-white" href="/owner/chusan_lichsu">Lịch sử
                                        đặt sân</a></li>
                                <% } %>
                    </ul>
                    <ul class="navbar-nav ml-auto">
                        <% if (session.user_id) { %>
                            <li class="nav-item"><a class="nav-link text-white" href="/dangxuat">Đăng xuất</a></li>
                            <% } else { %>
                                <li class="nav-item"><a class="nav-link text-white" href="/dangnhap">Đăng nhập</a>
                                </li>
                                <li class="nav-item"><a class="nav-link text-white" href="/dangky">Đăng ký</a></li>
                                <% } %>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container mt-4">
        <h2>Danh sách dịch vụ</h2>
        <div class="table-container">
            <table class="table table-bordered table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th>Tên dịch vụ</th>
                        <th>Mô tả</th>
                        <th>Giá (VNĐ)</th>
                        <th>Thuộc sân bóng</th>
                        <% if (session && session.role==='admin' ) { %>
                            <th>Hành động</th>
                            <% } %>
                    </tr>
                </thead>
                <tbody>
                    <% services.forEach(service=> { %>
                        <tr>
                            <td>
                                <%= service.name %>
                            </td>
                            <td>
                                <%= service.description || 'Không có mô tả' %>
                            </td>
                            <td>
                                <%= Number(service.price).toLocaleString("vi-VN") %>
                            </td>
                            <td>
                                <%= service.field_name %>
                            </td>
                            <% if (session && session.role==='admin' ) { %>
                                <td>
                                    <a href="/sua_dichvu/<%= service.id %>" class="btn btn-warning btn-sm">Sửa</a>
                                    <button onclick="deleteService(<%= service.id %>)"
                                        class="btn btn-danger btn-sm">Xóa</button>
                                </td>
                                <% } %>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
    </main>


    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script src="https://unpkg.com/leaflet-routing-machine@latest/dist/leaflet-routing-machine.js"></script>
    <script src="https://unpkg.com/leaflet-control-geocoder/dist/Control.Geocoder.js"></script>
    <script src="https://unpkg.com/leaflet-draw@1.0.4/dist/leaflet.draw.js"></script>
    <script>
        function deleteService(id) {
            if (confirm("Bạn có chắc muốn xóa dịch vụ này không?")) {
                fetch(`/api/dichvu/${id}`, { method: "DELETE" })
                    .then(res => {
                        if (res.ok) location.reload();
                        else alert("Xóa dịch vụ thất bại");
                    });
            }
        }
    </script>
    <script src="/scripts/dichvu.js"></script>

</body>

</html>